rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Allow users to write their own profile
      allow write: if isOwner(userId);
      // Allow any authenticated user to read user profiles (needed for collaboration lookup)
      // Note: In a production app, we should separate private data (financials) to a subcollection
      allow read: if isAuthenticated();
    }

    // Projects collection
    match /projects/{projectId} {
      // Allow create if the ownerId matches the authenticated user
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;

      // Allow update/delete only by owner
      allow update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;

      // Allow read if owner OR member
      allow read: if isAuthenticated() && (resource.data.ownerId == request.auth.uid || request.auth.uid in resource.data.members);
    }
  }
}
