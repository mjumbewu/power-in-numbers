rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Projects collection
    match /projects/{projectId} {
      // Allow create if the ownerId matches the authenticated user
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;

      // Allow read, update, delete if the resource's ownerId matches the authenticated user
      // This works for queries like: collection('projects').where('ownerId', '==', auth.uid)
      allow read, update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }
  }
}
